{
  "name": "h4graphql",
  "version": "1.0.0",
  "description": "this is a Polutz module.",
  "main": "dist/index.js",
  "typings": "src/index.ts",
  "scripts": {
    "lint": "tslint ./src/**/*.ts ./src/**/*.test.ts ./src/**/*.d.ts",
    "js": "rimraf dist-esnext && tsc && rimraf dist && babel dist-esnext -d dist --presets es2015 --source-maps",
    "pretest": "npm-run-all --parallel js lint",
    "mocha": "mocha ./dist/**/*.js --require babel-polyfill",
    "test": "nyc npm run mocha && nyc report --reporter=html --reporter=text-lcov > coverage.lcov && f() { EXIT=0; codecov --token=aa63d374-9f48-4994-b3a7-d9ca080c82a9 || exit $EXIT; }; f",
    "test:cover": "npm run test && opn ./coverage/index.html",
    "predebug": "npm run pretest",
    "debug": "node --nolazy --debug-brk=5858 dist/index.js",
    "docs:build": "typedoc --out ./docs ./ --includeDeclarations --excludeExternals --exclude '**/*.test.ts'",
    "docs": "npm run docs:build && opn ./docs/index.html",
    "start": "npm-run-all --parallel gensalt server",
    "server": "npm run js && babel-node --presets es2015 dist/index.js",
    "gensalt": "node gensalt.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanmarcell/h4server.git"
  },
  "author": "github.com/angeloocana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alanmarcell/h4server/issues"
  },
  "homepage": "https://github.com/alanmarcell/h4server#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "codecov": "^2.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "ptz-assert": "^1.6.3",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2",
    "@types/graphql-relay": "^0.4.2",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "typedoc": "^0.6.0",
    "opn-cli": "^3.1.0"
  },
  "dependencies": {
    "ptz-log": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-graphql": "^0.6.4",
    "graphql": "^0.9.2",
    "graphql-relay": "^0.5.1",
    "mongodb": "^2.2.25",
    "ptz-log-file": "^1.0.0",
    "ptz-user-app": "^1.2.0",
    "ptz-user-domain": "^1.2.3",
    "ptz-user-repository": "^1.1.1",
    "ptz-menu-domain": "^1.0.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2017"
    ]
  }
}
